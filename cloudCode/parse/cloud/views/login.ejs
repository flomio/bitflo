 <% include templates/minheader %>
 
 <div class="container">
 	<br />
   <form class="form-horizontal" role="form" action="/login" method="post">

    <fieldset>
      <legend>Login</legend>
	  <div class="form-group">
        <label class="col-sm-3 control-label" for="card-holder-name">Card Serial Number</label>
        <div class="col-sm-4">
		  <input type="text" class="form-control" placeholder="Card Serial Number" name="username" autocomplete="off" required autofocus>
        </div>
      </div>
	  <div class="form-group">
        <label class="col-sm-3 control-label" for="card-holder-name">PIN</label>
        <div class="col-sm-4">
		  <input type="password" class="form-control" placeholder="PIN" name="password" required>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-3 col-sm-9">
          <button class="btn btn-success" type="submit">Claim</button>
		  <!---<button class="btn btn-lg btn-primary btn-block" type="submit">Search</button>--->
        </div>
      </div>
    </fieldset>
  </form>
 </div>
 <% include templates/minfooter %>